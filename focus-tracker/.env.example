# ======================================
# Server-side environment variables
# These variables are NOT exposed to the browser
# ======================================

DATABASE_URL="postgresql://postgres:postgres@localhost:5432/habit_tracker"
# Database connection string used only on the server

# Redis (optional - app works without caching)
REDIS_URL="redis://localhost:6379"

# JWT Secret (generate a secure random string for production)
JWT_SECRET=thisisthesupersecretkey

# ======================================
# AWS S3 Configuration (for file uploads)
# ======================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=your-bucket-name

# ======================================
# AWS SES Configuration (for transactional emails)
# ======================================
# Uses the same AWS credentials as S3 above
# SES_EMAIL_SENDER must be a verified email/domain in AWS SES
SES_EMAIL_SENDER=no-reply@yourdomain.com

# ======================================
# Client-side environment variables
# Must start with NEXT_PUBLIC_ to be accessible in the browser
# ======================================

NEXT_PUBLIC_API_URL=https://api.example.com
# Base URL for frontend API requests

NEXT_PUBLIC_APP_URL=http://localhost:3000
# App URL for email links

NEXT_PUBLIC_APP_ENV=development
# Current environment (local | staging | production)

